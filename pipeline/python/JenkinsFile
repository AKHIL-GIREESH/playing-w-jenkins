pipeline{
    agent any
    stages{
        stage('Install Dependencies'){
            steps{
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test'){
            steps{
                sh 'pytest --junitxml=reports/test-results.xml'
            }
        }
        stage('Build'){
            steps{
                sh 'timeout 60s python app.py'
            }
        }

    }
}